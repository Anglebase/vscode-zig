{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "outDir": "out",
        "esModuleInterop": true,
        "lib": ["esnext"],
        "sourceMap": true,
        "rootDir": "src",

        "strict": true,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true
    }
}
