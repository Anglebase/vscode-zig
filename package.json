{
    "name": "zig",
    "displayName": "Zig",
    "description": "Language support for the zig programming language",
    "version": "0.1.0",
    "publisher": "tiehuis",
    "icon": "images/zig-icon.svg",
    "repository": {
        "type": "git",
        "url": "https://github.com/tiehuis/vscode-zig"
    },
    "engines": {
        "vscode": "*"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "zig",
            "extensions": ["*.zig"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "zig",
            "scopeName": "source.zig",
            "path": "./syntaxes/zig.tmLanguage.json"
        }]
    }
}
